{
  "name": "www",
  "version": "3.0.1",
  "description": "Source code for our public web sites",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev-server": "static ./build",
    "lint": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ResourcefulHumans/www.git"
  },
  "keywords": [
    "simple",
    "social",
    "realtime"
  ],
  "author": "Resourceful Humans <info@resourceful-humans.com>",
  "license": "UNLICENSED",
  "homepage": "https://github.com/ResourcefulHumans/www#readme",
  "dependencies": {
    "aliasify": "^2.0.0",
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "bootstrap": "^4.0.0-alpha.3",
    "browserify": "^13.1.0",
    "browserify-shim": "^3.8.12",
    "font-awesome": "^4.6.3",
    "ionicons": "^3.0.0",
    "jquery": "^3.1.1",
    "nconf": "^0.8.4",
    "node-sass": "^3.10.0",
    "rheactor-build-views": "^2.0.0",
    "uglifycss": "0.0.21",
    "uglifyjs": "^2.4.10",
    "velocity-animate": "^1.2.3",
    "vide": "^0.5.0"
  },
  "devDependencies": {
    "ghooks": "^1.3.2",
    "node-static": "^0.7.8",
    "standard": "^8.1.0",
    "validate-commit-msg": "^2.8.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    }
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ],
          "only": [
            "/src/js/*.js",
            "/src/js/**/*.js"
          ]
        }
      ],
      "browserify-shim",
      "aliasify"
    ]
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "tether": "./node_modules/tether/dist/js/tether.js",
    "bootstrap": "./node_modules/bootstrap/dist/js/bootstrap.js",
    "vide": "./node_modules/vide/dist/jquery.vide.js",
    "velocity": "./node_modules/velocity-animate/velocity.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "bootstrap": "bootstrap",
    "tether": "tether",
    "vide": "vide",
    "velocity": {
      "deps": [
        "jquery"
      ]
    }
  },
  "files": [
    "assets",
    "src"
  ]
}
