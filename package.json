{
  "name": "www",
  "version": "3.5.0",
  "description": "Source code for our public web sites",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev-server": "static ./build",
    "lint": "standard",
    "precommit": "npm run lint",
    "commitmsg": "validate-commit-msg && validate-commit-email @resourceful-humans.com$"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ResourcefulHumans/www.git"
  },
  "keywords": [
    "simple",
    "social",
    "realtime"
  ],
  "author": "Resourceful Humans <info@resourceful-humans.com>",
  "license": "UNLICENSED",
  "homepage": "https://github.com/ResourcefulHumans/www#readme",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "bootstrap": "4.0.0-alpha.5",
    "contentful": "^4.1.2",
    "font-awesome": "^4.7.0",
    "ionicons": "^3.0.0",
    "jquery": "^3.2.1",
    "meownica-web-fonts-loader": "^1.2.1",
    "velocity-animate": "^1.5.0",
    "vide": "^0.5.1"
  },
  "devDependencies": {
    "aliasify": "^2.1.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "browserify-shim": "^3.8.14",
    "husky": "^4.2.3",
    "nconf": "^0.8.4",
    "node-sass": "^4.5.2",
    "node-static": "^0.7.8",
    "rheactor-build-views": "^4.0.1",
    "standard": "^10.0.2",
    "uglifycss": "0.0.27",
    "uglifyjs": "^2.4.10",
    "validate-commit-email": "^1.0.1",
    "validate-commit-msg": "^2.12.1"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ],
          "only": [
            "/src/js/*.js",
            "/src/js/**/*.js"
          ]
        }
      ],
      "browserify-shim",
      "aliasify"
    ]
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "tether": "./node_modules/tether/dist/js/tether.js",
    "bootstrap": "./node_modules/bootstrap/dist/js/bootstrap.js",
    "vide": "./node_modules/vide/dist/jquery.vide.js",
    "velocity": "./node_modules/velocity-animate/velocity.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "bootstrap": "bootstrap",
    "tether": "tether",
    "vide": "vide",
    "velocity": {
      "deps": [
        "jquery"
      ]
    }
  },
  "files": [
    "assets",
    "src"
  ],
  "engines": {
    "node": ">=6.9.0"
  }
}
